<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="org.cba.im_seminar.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:gravity="center"
            android:text="@string/app_title"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="101dp"
                android:layout_height="41dp"
                android:layout_weight="0.03"
                android:gravity="center"
                android:text="@string/qt"
                android:textSize="18sp" />

            <Button
                android:id="@+id/today_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dip"
                android:layout_weight="0.34"
                android:background="#5CD1E5"
                android:text="@string/today" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_weight="0.02"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dip"
                android:background="#f0f0f0"
                android:gravity="center"
                android:text="@string/doing_qt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_weight="0.01"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="101dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/pray_name"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_weight="0.22"
            android:orientation="vertical">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_weight="0.43"
            android:orientation="horizontal"
            android:padding="10dip">

            <EditText
                android:id="@+id/editText"
                android:layout_width="279dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/add_pray_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#5CD1E5"
                android:text="@string/add" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.37"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Copyright 2017 by IM. All Rights Reserved." />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
